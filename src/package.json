{
  "name": "nodejs-demoapp",
  "description": "Node.js Express app for demos",
  "version": "4.9.8",
  "author": "Ben Coleman",
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benc-uk/nodejs-demoapp.git"
  },
  "private": true,
  "scripts": {
    "start": "node --expose_gc server.mjs",
    "start-bg": "node server.mjs &",
    "watch": "nodemon --trace-deprecation --experimental-modules",
    "test-report": "mocha --reporter mochawesome --exit ./tests > test-results.json",
    "test": "mocha --exit ./tests",
    "test-postman": "newman run tests/postman_collection.json --timeout 60000 --env-var apphost=$TEST_HOST",
    "lint": "eslint . && prettier --check **/*.mjs",
    "lint-fix": "eslint . --fix && prettier --write **/*.mjs"
  },
  "dependencies": {
    "@azure/msal-node": "^2.15.0",
    "applicationinsights": "2.9.6",
    "axios": "^1.7.7",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-prometheus-middleware": "^1.2.0",
    "express-session": "^1.18.0",
    "mongodb": "^6.9.0",
    "morgan": "^1.10.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3",
    "newman": "^5.3.2",
    "nodemon": "^2.0.19",
    "prettier": "^3.3.3",
    "supertest": "^6.2.4"
  }
}
